{
    "manifest_version": 2,
    "name": "Shoonya Logout Fix",
    "short_name": "ShoonyaLogoutFix",
    "version": "1.0.0",
    "description": "This Unofficial extension fixes the frequent logout issues in Shoonya by blocking the validateHSToken request.",
    "author": "Eldho Skariah",
    "homepage_url": "https://github.com/eldhoskariah/shoonyalogoutfix",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
       
    ],
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "background": {
        "persistent": true,
        "scripts": ["block.js"]
    },
    "browser_action": {
        "default_title": "Shoonya Logout Fix",
        "default_icon": {
            "16": "img/icon_16.png",
            "48": "img/icon_48.png",
            "128": "img/icon_128.png"
        },
        "default_popup": "popup.html"
    }
}
